[bar/main]
bottom = true
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 24
;offset-x = 1%
;offset-y = -5
;radius = 0.0
fixed-center = false

background = ${monokai.dark}
foreground = ${monokai.white}

line-size = 1
line-color = $(monokai.dark)

radius-top = 5.0
border-top-size = 1
border-color = $(monokai.red)

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Material Icons:pixelsize=10;1
font-3 = "FontAwesome:pixelsize=14;0"

modules-left = i3
modules-center = 
modules-right = filesystem xbacklight pulseaudio memory cpu temperature wlan eth vpn battery battery1 date

tray-position = right
tray-padding = 2
tray-scale = 1.2


