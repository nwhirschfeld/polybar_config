; http://www.colourlovers.com/color/E0E0E0/average_joe 

[bar/main]
bottom = true
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 24
;offset-x = 1%
;offset-y = -5
;radius = 0.0
fixed-center = false

background = ${monokai.dark}
foreground = ${monokai.white}

line-size = 1
line-color = $(monokai.dark)

border-size = 0
border-color = $(monokai.dark)

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = Material Icons:pixelsize=10;1
font-3 = "FontAwesome:pixelsize=14;0"

modules-left = i3
modules-center = 
modules-right = filesystem xbacklight pulseaudio memory cpu wlan eth battery battery1 temperature date

tray-position = right
tray-padding = 2

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}
#format-prefix-underline = ${colors.secondary}

label-layout = %layout%
#label-layout-underline = ${colors.secondary}

label-indicator-padding = 2
label-indicator-margin = 1
label-indicator-background = ${colors.secondary}
#label-indicator-underline = ${colors.secondary}

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /

label-mounted = %{Fmonokai.blue} %{F-} %percentage_used%%
label-unmounted = %mountpoint% not mounted
label-unmounted-foreground = ${colors.foreground-alt}


[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false


ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 10;
ws-icon-default = " "

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = ${monokai.blue}
label-mode-background = ${monokai.grey}

; focused = Active workspace on focused monitor
label-focused = %name%
;%icon%
label-focused-foreground = ${monokai.dark}
label-focused-background = ${monokai.grey}
label-focused-underline= ${monokai.dark}
label-focused-overline= ${monokai.grey}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %name%
;%{F#fff7fb}%icon%%{F-}
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = ${self.label-unfocused}
label-visible-background = ${self.label-focused-background}
#label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = " %name%"
;%icon%"
label-urgent-foreground = ${monokai.dark}
label-urgent-overline = ${monokai.red}
label-urgent-background = ${monokai.red}
label-urgent-padding = 2

[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = 

bar-width = 10
bar-indicator = ""
