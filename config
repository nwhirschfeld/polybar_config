[colors]
;background = #252935 ; dark grey
background = #FFFF00
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #9ca1ac
foreground-alt = #8c919d
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[monokai]
dark    = #272822   
; http://www.colourlovers.com/color/272822/Sundried_clay

red     = #f92672   
; http://www.colourlovers.com/color/F92672/Orchid 

